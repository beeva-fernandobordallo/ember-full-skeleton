{{#if loading}}
  <div class="row">
    <div class="col s12 center-align">
      <div class="loading-overlay">
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <img src="/assets/loaders/477.GIF" height="80" width="80">
      </div>
    </div>
  </div>
{{/if}}
<div class="page">

  <div class="row">
    <div class="col s8 push-s2 m6 push-m3">
      <ul class="tabs">
        <li class="tab col s3 pointer"><a class="active blue-text" {{action 'toggleType' 'gasto'}}>Gastos</a></li>
        <li class="tab col s3 pointer"><a class="blue-text" {{action 'toggleType' 'ingreso'}}>Ingresos</a></li>
        <div class="indicator blue" style="z-index:1"></div>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m8 push-m2 center-align">
      <ul class="collapsible" data-collapsible="accordion">
        {{#each datosLista as |dato|}}
          <li>
            <div class="collapsible-header">
              <i class="material-icons">
                -
              </i>
              <span class="left">
                {{dato.fecha}}
              </span>
              <span class="right">
                {{dato.importe}} â‚¬
              </span>
            </div>
            <div class="collapsible-body"><p>{{dato.descripcion}}</p></div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s12 center-align">
      <ul class="pagination">
        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
        {{#if gastos}}
          {{#each paginasGastos as |pagina|}}
            <li class={{if pagina.state 'active blue' 'waves-effect'}}><a href="#!"><span>{{pagina.page}}</span></a></li>
          {{/each}}
        {{/if}}
        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('ul.tabs').tabs();
    $('.collapsible').collapsible({
      accordion : false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
    });
  });
</script>
