<div class="page">
  <br><h5 class="center-align thin">Nuevo Importe</h5><br>
  <div class="container">
    <div class="row">
      <div class="col s8 push-s2 m6 push-m3">
        <ul class="tabs">
          <li class="tab col s3 pointer"><a class="active blue-text" {{action 'toggleType' 'gasto'}}>Gasto</a></li>
          <li class="tab col s3 pointer"><a class="blue-text" {{action 'toggleType' 'ingreso'}}>Ingreso</a></li>
          <div class="indicator blue" style="z-index:1"></div>
        </ul>
      </div>
    </div>
    <div class="row">
      <form class="col s12" {{action "guardarGasto" on="submit"}}>
        <div class="row">
          <div class="input-field col s12 m6">
            <ul class="collapsible" data-collapsible="accordion">
              <li>
                <div class="collapsible-header">
                  <i class="material-icons">filter_drama</i>
                  Categoria
                  <span class="right">
                    {{#if catSelected}}
                      <u>{{gasto.tipo}}</u>
                    {{else}}
                      <div class="thin">
                        Selecciona opc.
                      </div>
                    {{/if}}
                  </span>
                </div>
                <div class="collapsible-body">
                  {{#each categorias as |cat index|}}
                    <p {{action 'selectedCat' cat}} class="waves-effect full-width waves-teal">
                      <input class="with-gap" name="group-categorias" type="radio" id=cat value=cat>
                      <label for={{cat}}>{{cat}}</label>
                    </p>
                  {{/each}}
                </div>
              </li>
              <li>
                <div class="collapsible-header">
                  <i class="material-icons">filter_drama</i>
                  Modo de pago
                  <span class="right">
                    {{#if sistSelected}}
                      <u>{{gasto.sistema}}</u>
                    {{else}}
                      <div class="thin">
                        Selecciona opc.
                      </div>
                    {{/if}}
                  </span>
                </div>
                <div class="collapsible-body">
                  {{#each sistemas as |sist index|}}
                    <p {{action 'selectedSist' sist}} class="waves-effect full-width waves-teal">
                      {{input class="with-gap" name="group-sistemas" type="radio" id=sist }}
                      <label for={{sist}}>{{sist}}</label>
                    </p>
                  {{/each}}
                </div>
              </li>
            </ul>
            <!--
            {{view "select" content=categorias value=gasto.tipo}}

            <label>Categor√≠a</label>
            -->
          </div>
          <div class="input-field col s12 m6">
            <ul class="collapsible" data-collapsible="accordion">

            </ul>
            <!--
            {{view "select" content=sistemas value=gasto.sistema}}
            <label>Sistema de pago</label>
            -->
          </div>
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">query_builder</i>
            {{input type="date" class="datepicker" value=tempFecha placeholder="Fecha" required=true}}
            <label class="active">Fecha</label>
          </div>
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">dialpad</i>
            {{input value=gasto.importe type="number" min="0.01" step="0.01" placeholder="Importe" required=true}}
            <label class="active">Importe</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">chat_bubble_outline</i>
            {{textarea class="materialize-textarea" value=gasto.descripcion placeholder="Descripcion"}}
            <label class="active">Comentarios</label>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            {{#link-to 'user.dashboard'}}
            <button class="full-width right waves-effect waves-light btn red lighten-1">
              <i class="material-icons right">not_interested</i>
              Cancelar
            </button>
            {{/link-to}}
          </div>
          <div class="col s6">
            <button class="full-width right waves-effect waves-light btn green lighten-1" type="submit">
              <i class="material-icons right">done</i>
              {{t 'label.save'}}
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<br>
<br>
<br>

<script type="text/javascript">

  $(document).ready(function() {
      $('ul.tabs').tabs();
      $('select').material_select();
      $('.collapsible').collapsible({
        accordion : false // A setting that changes the collapsible behavior to expandable instead of the default accordion style
      });
  });

</script>
